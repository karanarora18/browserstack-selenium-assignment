<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="BrowserStackSuite" parallel="tests" thread-count="5">

    <test name="Desktop-Chrome">
        <parameter name="browser" value="chrome"/>
        <parameter name="browser_version" value="139.0"/>
        <parameter name="os" value="Windows"/>
        <parameter name="os_version" value="11"/>
        <classes>
            <class name="io.github.karanarora18.runners.TestRunner"/>
        </classes>
    </test>

    <test name="Desktop-Firefox">
        <parameter name="browser" value="firefox"/>
        <parameter name="browser_version" value="140.0"/>
        <parameter name="os" value="Windows"/>
        <parameter name="os_version" value="11"/>
        <classes>
            <class name="io.github.karanarora18.runners.TestRunner"/>
        </classes>
    </test>

    <test name="Mobile-Android">
        <parameter name="browser" value="chrome"/> <!-- Changed from browserName to browser -->
        <parameter name="device" value="Samsung Galaxy S23"/>
        <parameter name="realMobile" value="true"/>
        <classes>
            <class name="io.github.karanarora18.runners.TestRunner"/>
        </classes>
    </test>

    <test name="Mobile-iOS">
        <parameter name="browser" value="safari"/> <!-- Changed from browserName to browser -->
        <parameter name="device" value="iPhone 15"/>
        <parameter name="realMobile" value="true"/>
        <classes>
            <class name="io.github.karanarora18.runners.TestRunner"/>
        </classes>
    </test>

    <test name="Desktop-Edge">
        <parameter name="browser" value="edge"/>
        <parameter name="browser_version" value="137.0"/>
        <parameter name="os" value="Windows"/>
        <parameter name="os_version" value="10"/>
        <classes>
            <class name="io.github.karanarora18.runners.TestRunner"/>
        </classes>
    </test>

</suite>
