<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="BrowserStackSuite" parallel="tests" thread-count="5">
    <listeners>
        <listener class-name="io.github.karanarora18.listeners.ParameterListener"/>
    </listeners>
    <test name="Desktop-Chrome-Windows">
        <parameter name="browser" value="Chrome"/>
        <parameter name="os" value="Windows"/>
        <parameter name="os_version" value="11"/>
        <parameter name="browser_version" value="138.0"/>
        <classes>
            <class name="io.github.karanarora18.runners.TestRunner"/>
        </classes>

    </test>

    <test name="Desktop-Chrome-MacOS">
        <parameter name="browser" value="Chrome"/>
        <parameter name="os" value="OS X"/>
        <parameter name="os_version" value="Sequoia"/>
        <parameter name="browser_version" value="138.0"/>
        <classes>
            <class name="io.github.karanarora18.runners.TestRunner"/>
        </classes>
    </test>

    <test name="Mobile-Android">
        <parameter name="browser" value="chrome"/>
        <parameter name="device" value="Samsung Galaxy S23 Ultra"/>
        <parameter name="os_version" value="13.0"/>
        <parameter name="realMobile" value="true"/>
        <classes>
            <class name="io.github.karanarora18.runners.TestRunner"/>
        </classes>
    </test>

    <test name="Mobile-iOS">
        <parameter name="browser" value="safari"/>
        <parameter name="device" value="iPhone 14 Pro Max"/>
        <parameter name="os_version" value="16"/>
        <parameter name="realMobile" value="true"/>
        <classes>
            <class name="io.github.karanarora18.runners.TestRunner"/>
        </classes>
    </test>

    <test name="Desktop-Edge">
        <parameter name="browser" value="Edge"/>
        <parameter name="os" value="Windows"/>
        <parameter name="os_version" value="11"/>
        <parameter name="browser_version" value="137.0"/>
        <classes>
            <class name="io.github.karanarora18.runners.TestRunner"/>
        </classes>
    </test>

</suite>
